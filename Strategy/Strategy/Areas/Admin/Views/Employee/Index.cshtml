@model List<Employee>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"></h4>

                <a asp-action="Create" class="btn btn-success">Create</a>


                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>
                                    NO
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Position
                                </th>

                                <th>
                                    Setting
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(Employee employee in Model)
                            {
                                
                            <tr>
                                <td>
                                    @employee.Id
                          
                                </td>
                                <td>
                                    <img src="~/imgs/team/@employee.Image" alt="Alternate Text" />
                                   
                                </td>
                                <td>
                                        @employee.Name
                                    
                                </td>
                                <td>
                                   @employee.Position
                                </td>
                                    <td>
                                        <a asp-action="Update" asp-route-Id="@employee.Id" class="btn btn-primary">Update</a>
                                        <a asp-action="Delete" asp-route-Id="@employee.Id" class="btn btn-danger">Delete</a>
                                    </td>
                            </tr>
                            }
                           
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
